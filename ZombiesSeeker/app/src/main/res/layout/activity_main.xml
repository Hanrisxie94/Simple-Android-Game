<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context="com.cmpt276.as3.zombiesseeker.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="221dp"
        android:layout_height="320dp"
        android:layout_marginBottom="41dp"
        android:layout_marginEnd="228dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357">


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/zombie_seeker" />

        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="19dp"
            app:button_icon="@drawable/play"
            app:button_icon_height="25dp"
            app:button_icon_width="25dp"
            app:expandable_area_color="#caff0000"
            app:hide_text="Play!"
            app:icon_button_color="#fdfdfd"
            app:magic_button_size="50dp" />

        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/btn_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            app:button_icon="@drawable/setting"
            app:button_icon_height="25dp"
            app:button_icon_width="25dp"
            app:expandable_area_color="#caff0000"
            app:hide_text="Setting"
            app:icon_button_color="#fcfbfb"
            app:magic_button_size="50dp" />

        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/btn_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_icon="@drawable/help"
            app:button_icon_height="25dp"
            app:button_icon_width="25dp"
            app:expandable_area_color="#caff0000"
            app:hide_text="Help"
            app:icon_button_color="#fffefe"
            app:magic_button_size="50dp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
